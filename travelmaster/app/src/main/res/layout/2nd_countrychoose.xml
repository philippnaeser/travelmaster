<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffba09"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:weightSum="1"
        android:id="@+id/Headingbox">

        <TextView
            android:layout_width="165dp"
            android:layout_height="56dp"
            android:text="TravelMaster "
            android:id="@+id/Heading"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="Comic Sans"
            android:textColor="#ff000000"
            android:textSize="32dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="78dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Please choose your visiting Country ! !"
            android:id="@+id/textView"
            android:textStyle="italic"
            android:textSize="22dp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/Englandbox"
        android:paddingStart="80dp"
        android:paddingEnd="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flaggeengland"
            android:src="@drawable/Englandflagge"
            android:baselineAlignBottom="false" />

        <Button
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:text="Great Britain"
            android:id="@+id/English"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Francebox"
        android:paddingEnd="80dp"
        android:paddingStart="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flaggefrance"
            android:src="@drawable/Frankreichflagge" />

        <Button
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:text="France"
            android:id="@+id/French"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Portugalbox"
        android:paddingEnd="80dp"
        android:paddingStart="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flaggeportugal"
            android:src="@drawable/Portugalflagge" />

        <Button
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:text="Portugal"
            android:id="@+id/Portugal"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/Spainbox"
        android:paddingEnd="80dp"
        android:paddingStart="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flaggespain"
            android:src="@drawable/Spanienflagge" />

        <Button
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:text="Spain"
            android:id="@+id/Spain"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/Germanybox"
        android:paddingStart="80dp"
        android:paddingEnd="80dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/flaggegermany"
            android:src="@drawable/Deutschlandflagge" />

        <Button
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:text="Germany"
            android:id="@+id/German"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>